spring:
  application:
    name: api-gateway
  cloud:
    gateway:
      routes:
        - id: inventory-management
          uri: lb://inventory-management
          predicates:
            - Path=/api/**
        - id: room-management
          uri: lb://room-management
          predicates:
            - Path=/movies/**
        - id: ratings-data-service
          uri: lb://ratings-data-service
          predicates:
            - Path=/ratingsdata/**   

server:
  port: 8989
  
management:
  endpoints:
    web:
      exposure:
        include: hystrix.stream

hystrix:
  command:
    fallbackcmd:
      execution:
        isolation:
          thread:
            timeoutInMilliseconds: 5000  